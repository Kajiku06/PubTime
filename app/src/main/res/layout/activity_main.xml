<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFE0"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz w jakim zasięgu chcesz znaleźć pub"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="4"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkBoxFootball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mecze piłkarskie"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkBoxTennis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mecze tenisa"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkBoxSpeedway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zawody żużlowe"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Szukaj"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#303F9F"
        android:layout_marginBottom="16dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
